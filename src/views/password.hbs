<div class="row">

   <div class="col s6 offset-s3">

      {{#if error}}
      <p class="alert">{{error}}</p>
      {{/if}}
      <h1>Введите новый пароль.</h1>

      <form action="/auth/password" method="POST">
         <div class="input-field ">
            <input id="password" type="password" class="validate" name="password">
            <label for="password">Новый пароль</label>
            <span class="helper-text" data-error="Введите корректый пароль" data-success=""></span>
         </div>

         {{!-- <div class="input-field ">
            <input id="password2" type="password" class="validate" name="password2">
            <label for="password2">Повторите пароль</label>
            <span class="helper-text" data-error="Введите корректый пароль" data-success="Ok"></span>
         </div> --}}

         <input type="hidden" name="_csrf" value="{{csrf}}">
         <input type="hidden" name="userId" value="{{userId}}">
         <input type="hidden" name="token" value="{{token}}">


         <button class="waves-effect waves-light btn">Изменить пароль</button>

      </form>

   </div>

</div>