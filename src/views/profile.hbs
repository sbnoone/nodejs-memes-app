<h1>Профиль</h1>

<div class="row">
   <div class="col s6">
      {{#if user.avatarURL }}
      <img class="profile_avatar" src="/images/{{user.avatarURL}}" alt="avatar-{{user.name}}">
      {{else}}
      <p>Аватара нет</p>
      {{/if}}
   </div>
   <div class="col s6">
      <form action="/profile" method="POST" enctype="multipart/form-data">
         <p class="profile_email">Ваш email: <strong>{{user.email}}</strong></p>


         <div class="input-field ">
            <input id="name" type="text" name="name" value="{{user.name}}" class="validate">
            <label for="name">Введите имя</label>
            <span class="helper-text" data-error="Введите имя" data-success=""></span>
         </div>

         <div class="file-field input-field">
            <div class="btn btn-small">
               <span>Аватар</span>
               <input type="file" name="avatar">
            </div>
            <div class="file-path-wrapper">
               <input class="file-path validate" type="text" placeholder="Загрузить">
            </div>
         </div>

         <input type="hidden" name="_csrf" value="{{csrf}}">

         <button type="submit" class="btn">Изменить</button>

      </form>
   </div>
</div>