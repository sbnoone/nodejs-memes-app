<h1>Избранное</h1>
{{#if memes.length}}
{{#each memes}}
<div class="row">
   <div class="col s8 offset-s2">
      <div class="card">
         <div class="card-image">
            <img src='{{image}}' alt='{{title}}'>
         </div>
         <div class="card-content flex f-sb">
            <h6 class="center-align">{{title}}</h6>
            <p class="date">{{createdAt}}</p>
         </div>
         <div class="card-action right-align flex flex-end">
            <form action="/memes/favorite/remove" method="POST">
               <input type="hidden" name="_csrf" value="{{@root.csrf}}">
               <input type="hidden" name="id" value="{{_id}}">
               <button type="submit" class="btn btn-primary btn-small">Убрать</button>
            </form>
            {{#isEqual userId._id @root.userId}}
            <a class="btn btn-small btn-primary" href="/memes/{{_id}}/edit">Редактировать</a>
            {{/isEqual}}
            <a class="btn btn-small btn-primary" href="/memes/{{_id}}">Открыть</a>
         </div>
      </div>
   </div>
</div>
{{/each}}
{{else}}
<p>Мемов пока нет</p>
{{/if}}